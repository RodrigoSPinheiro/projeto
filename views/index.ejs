<body>
  <h1>Projetos Filmes e Séries</h1>
  <h4 id="welcome"></h4>
  <div id="login"></div>
  <div id="logout"></div>
  <div id="caduser"></div>

  <ul id="rotas">
    <li id="listar"></li>
    <li id="cadastro"></li>
  </ul>
  <a class="btn btn-primary" href="/cad">Cadastre-se</a>'
  <script>
    function getCookie(c_name) {
      var i, x, y, ARRcookies = document.cookie.split(";");
      for (i = 0; i < ARRcookies.length; i++) {
        x = ARRcookies[i].substr(0, ARRcookies[i].indexOf("="));
        y = ARRcookies[i].substr(ARRcookies[i].indexOf("=") + 1);
        x = x.replace(/^\s+|\s+$/g, "");
        if (x == c_name) {
          return unescape(y);
        }
      }
    }
    $(document).ready(function () {
      let jwt = getCookie('x-access-token')
      let user = getCookie('user')

      if (jwt) {
        document.getElementById("login").innerHTML = '<a class="btn btn-danger" href="/logout">logout</a>'
        document.getElementById("listar").innerHTML = '<a href="/listar">Listagem de Filmes</a>'
        document.getElementById("cadastro").innerHTML = '<a href="/add">Cadastro</a>'
      } else {
        document.getElementById("login").innerHTML = '<a class="btn btn-primary" href="/login">login</a>'
      }

      if (user) {
        document.getElementById("welcome").innerHTML = 'Bem vindo ' + user;
      }
    })
  </script>

</body>

